<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:orientation="vertical">

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/project_name"
        android:layout_alignParentTop="true"
        android:text="n Aufgaben"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/project_nb_own_tasks"
        android:layout_marginEnd="6dp"/>
    <TextView
        android:text="Projekname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/project_nb_own_tasks"
        android:layout_marginStart="32dp"
        android:id="@+id/project_name"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:text="Beschreibung"
        android:id="@+id/project_description"
        android:layout_below="@id/project_name"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@id/project_name"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>
    <TextView
        android:text="TextView"
        android:id="@+id/project_columns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_below="@+id/project_description"
        android:layout_marginEnd="6dp"/>
    <TextView
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:id="@+id/sidebar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/project_columns"
        android:background="@color/colorPrimary" />

</RelativeLayout>
